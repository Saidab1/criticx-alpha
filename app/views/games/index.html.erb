<h1>All Games</h1>

<%= link_to "New Game", new_game_path %>

<table>
  <thead>
    <tr>
    <th>Name</th>
    <th>Rating</th>
    </tr>
  </thead>

  <tbody>
    <%@games.each do |game|%>
      <tr>
        <td><%= game.name%></td>
        <td><%= game.rating%></td>
        <td><%= link_to "Show", game_path(game) %></td>
        <td><%= link_to "Edit", edit_game_path(game)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Go to Home page", root_path%>


